# Пример конфигурации переменных для базового сервера
# Скопируйте этот файл в terraform.tfvars и заполните актуальными значениями

# UUID вашего проекта в Selectel
project_uuid = "f75e16974d78419488ff638c19d799a4"

# SSH публичные ключи для доступа к серверу
ssh_public_keys = [
  "ssh-rsa AAAAB3NzaC1yc2EAAAADAQABAAABgQC7... your-key@hostname"
]

# Опционально: пароль root (если не используете SSH ключи)
# root_password = "SecurePassword123!"

# Имя сервера
server_name = "my-web-server"

# Окружение
environment = "production" 